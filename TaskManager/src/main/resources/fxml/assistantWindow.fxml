<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="TaskManager.AssistantWindow.AssistantController">
    <stylesheets><URL value="@/CSS/AssistantWindowStyle.css" /></stylesheets>

    <top>
        <Button fx:id="closeAssist" onAction="#closeAssistantWindow" />
    </top>

    <center>
        <ScrollPane fx:id="scrollPane" hbarPolicy="NEVER" vbarPolicy="NEVER">
            <VBox fx:id="AssistWindow" />
         <padding>
            <Insets left="3.0" right="3.0" />
         </padding>
        </ScrollPane>
    </center>
</BorderPane>
